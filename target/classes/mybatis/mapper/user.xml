<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

	<!-- 회원들의 정보 리스트 -->
	<select id="user_list" parameterType="Map"
		resultType="com.ott.user.vo.UserVO">
		SELECT * FROM (
		SELECT rownum r_num, a.* FROM (SELECT * FROM
		ott_user
		ORDER BY u_idx DESC) a
		) WHERE r_num BETWEEN #{begin} AND
		#{end}
	</select>

	<!-- 회원 수 -->
	<select id="totalCount" resultType="int">
		SELECT COUNT(*) FROM ott_user
	</select>

	<!-- 회원 검색 기능 -->
	<select id="user_search" parameterType="String"
		resultType="com.ott.user.vo.UserVO">
		SELECT * FROM ott_user
		<where>
			<if test="searchType != null and searchValue != null">
				<choose>
					<when test="searchType == 0">
						u_idx LIKE '%'||#{searchValue}||'%'
					</when>
					<when test="searchType == 1">
						u_id LIKE '%'||#{searchValue}||'%'
					</when>
					<when test="searchType == 2">
						u_name LIKE '%'||#{searchValue}||'%'
					</when>
					<when test="searchType == 3">
						u_email LIKE '%'||#{searchValue}||'%'
					</when>
					<when test="searchType == 4">
						is_stop = #{searchValue}
					</when>
				</choose>
			</if>
		</where>
	</select>




	<!-- 회원 권한 부여 -->


	<!-- 회원 신고 기능 (is_warning이 누적되게) -->


	<!-- 회원 정지 설정(is_warning이 ???회 이상 누적 되었을 때, is_stop이 1로 바뀌면 정지 -->


	<!-- 회원 정지 수정 -->
	<update id="user_editStop">
		UPDATE OTT_USER
		SET IS_STOP = #{is_stop}
		WHERE U_IDX = #{u_idx}
	</update>

	<!-- <select id="user_editStop" parameterType="Map" resultType="com.ott.user.vo.UserVO"> 
		</select> -->
</mapper>